<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_gragh2"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapplication.navigation1.fragment.HomeFragment"
        android:label="fragment_home2"
        tools:layout="@layout/fragment_home2" >
        <action
            android:id="@+id/action_homeFragment2_to_detailFragment2"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_from_left2"
            app:exitAnim="@anim/nav_default_exit_anim">
            <argument
                android:name="name"
                android:defaultValue="tom" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.myapplication.navigation1.fragment.DetailFragment"
        android:label="fragment_detail2"
        tools:layout="@layout/fragment_detail2" >
        <action
            android:id="@+id/action_detailFragment2_to_homeFragment2"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="jack" />
    </fragment>
</navigation>